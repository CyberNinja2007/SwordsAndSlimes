@model SwordsAndSlimes.WEB.Models.MonsterIndexViewModel

@{
    ViewData["Title"] = "Удаление монстра";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление монстра @Model.Name</h1>
<hr/>
<h3>Вы уверены, что хотите удалить его?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Health)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Health)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Attack)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attack)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Обратно в список</a>
    </form>
</div>
